@model List<(string Frase, string Etiqueta)>

<h2>Análisis de texto</h2>

@if (ViewBag.PorcentajeFormal != null && ViewBag.PorcentajeInformal != null)
{
    <div style="margin-bottom: 1em;">
        <strong>Formal:</strong> <span style="color:green;">@ViewBag.PorcentajeFormal.ToString("F1")%</span><br />
        <strong>Informal:</strong> <span style="color:blue;">@ViewBag.PorcentajeInformal.ToString("F1")%</span>
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>Frase</th>
            <th>Tipo</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var parte in Model)
        {
            <tr>
                <td>@parte.Frase</td>
                <td>
                    @if (parte.Etiqueta == "Formal")
                    {
                        <span style="color:green;">Formal</span>
                    }
                    else
                    {
                        <span style="color:blue;">Informal</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
