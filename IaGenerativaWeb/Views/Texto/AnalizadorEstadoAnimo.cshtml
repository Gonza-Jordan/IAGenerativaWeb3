@model IAGenerativaDemo.Web.Models.TextoViewModel
@{
    ViewData["Title"] = "Analizador de Estado de Ánimo";
}
<div class="container" style="max-width: 1000px;">
    <h2 class="text title mb-4 text-center">Analizador de Estado de Ánimo</h2>
    <form asp-action="AnalizadorEstadoAnimo" method="post" class="form shadow-lg rounded p-4 mb-4" style="background:rgba(30,30,50,0.97);">
        <label for="texto" class="text subtitle mb-2">Ingrese el texto a analizar:</label>
        <textarea id="texto" name="Texto" rows="4" class="form-control mb-3 textarea" style="background:#f5e6fa;">@Model?.Texto</textarea>
        <button type="submit" class="btn btn-primary w-100 mb-2" style="font-weight:bold;">Analizar</button>
        @if (ViewData.ModelState["Texto"]?.Errors.Count > 0)
        {
            foreach (var error in ViewData.ModelState["Texto"].Errors)
            {
                <div class="alert alert-danger mt-2">@error.ErrorMessage</div>
            }
        }
    </form>

    @if (!string.IsNullOrEmpty(Model?.Texto)
    && string.IsNullOrEmpty(Model?.MensajeSoloNumeros)
    && string.IsNullOrEmpty(ViewData.ModelState["Texto"]?.Errors.FirstOrDefault(e => e.ErrorMessage.Contains("Solo ingresó números"))?.ErrorMessage))
    {
        <div class="card shadow-sm mb-4 border-0" style="background: #181d36ee;">
            <div class="card-body">
                <h5 class="mb-2 text-info" style="font-weight:bold;">Texto ingresado:</h5>
                <div class="mb-3" style="font-size:1.08rem; color: #f4eaff;">@Model.Texto</div>
                @if (!string.IsNullOrEmpty(Model?.ResultadoEstadoAnimo))
                {
                    <hr />
                    <div>
                        <strong class="text-success">Resultado:</strong><br>
                        <span style="font-size:1.2rem;">
                            Estado de ánimo detectado:
                            <span class="result badge rounded-pill bg-success-subtle text-success-emphasis" style="font-size:1.15rem; margin-left:6px;">
                                @Model.ResultadoEstadoAnimo
                            </span>
                        </span>
                    </div>
                }
            </div>
        </div>
    }
    <div class="row justify-content-center mb-5">
        <div class="col-12 mb-3 text-center">
            <h4 class="sabias-que text-center" style="color: #fff; text-shadow: 0 2px 10px #7f39fb, 0 1px 2px #000;">
                ¿Sabías que...?
            </h4>
        </div>
        <div class="col-12 col-md-6 mb-3">
            <div class="card h-100 shadow-sm border-0" style="background:#fff2cc;">
                <div class="card-body d-flex flex-column justify-content-center align-items-center">
                    <div style="font-size:2.1rem;">😊</div>
                    <h6 class="card-title mt-2 mb-2" style="font-weight: bold; color: #795548;">Las emociones positivas son mayoría</h6>
                    <p class="card-text mb-0 text-center" style="color:#674106;">
                        Según análisis de redes sociales, <strong>más del 65% de los textos analizados transmiten emociones positivas</strong> como alegría, gratitud o entusiasmo.<br>
                        <span style="font-size:0.89rem; color:#967329;">(Fuente: Brandwatch Global Sentiment Analysis 2023)</span>
                    </p>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-6 mb-3">
            <div class="card h-100 shadow-sm border-0" style="background:#d1e7dd;">
                <div class="card-body d-flex flex-column justify-content-center align-items-center">
                    <div style="font-size:2.1rem;">😔</div>
                    <h6 class="card-title mt-2 mb-2" style="font-weight: bold; color: #235e42;">Los textos negativos se viralizan más</h6>
                    <p class="card-text mb-0 text-center" style="color:#134d36;">
                        Los textos con emociones negativas como enojo, tristeza o quejas <strong>tienen un 2,4 veces más probabilidades de compartirse</strong> que los positivos.<br>
                        <span style="font-size:0.89rem; color:#257156;">(Fuente: Science, "The Spread of True and False News Online", MIT, 2018)</span>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<button type="button" class="back" style="margin-bottom: 2rem;" onclick="location.href='@Url.Action("Index", "Home")'">Ir al Inicio</button>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/index.css" />
<script src="~/js/validacionTexto.js"></script>
