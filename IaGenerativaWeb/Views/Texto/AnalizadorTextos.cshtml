@model IAGenerativaDemo.Web.Models.TextoViewModel

@{
    ViewData["Title"] = "Analizador de Textos";
}

<div class="container" style="margin-top: 40px; max-width:700px;">
    <h2 class="mb-4">Analizador de Textos</h2>
    <form asp-action="AnalizadorTextos" method="post">
        <div class="mb-3">
            <label for="texto" class="form-label">Ingrese el texto a analizar:</label>
            <textarea id="texto" name="Texto" class="form-control" rows="6">@Model?.Texto</textarea>
        </div>
        <button type="submit" class="btn btn-primary">Analizar</button>
    </form>
</div>
