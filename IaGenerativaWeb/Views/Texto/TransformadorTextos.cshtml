@model IAGenerativaDemo.Web.Models.TextoViewModel
@{
    ViewData["Title"] = "Transformar Texto";
}

<div class="container">

<h2 class="text title">Transformar texto</h2>
<form asp-action="TransformadorTextos" method="post" class="form container">
        <label for="Texto" class="text subtitle">Texto a transformar:</label>
        <textarea name="Texto" id="Texto" rows="3" class="textarea">@Model?.Texto</textarea>
        @if (ViewData.ModelState["Texto"]?.Errors.Count > 0)
        {
            foreach (var error in ViewData.ModelState["Texto"].Errors)
            {
                <div class="alert alert-danger">@error.ErrorMessage</div>
            }
        }
        <label class="text subtitle">Transformar a:</label>
        <div class="horizontal">
            <div>
                <input type="radio" id="Formal" name="OpcionTransformar" value="Formal" @(Model?.OpcionTransformar == "Formal" ? "checked" : "") />
                <label for="Formal">Formal</label>
            </div>
            <div>
                <input type="radio" id="Informal" name="OpcionTransformar" value="Informal" @(Model?.OpcionTransformar == "Informal" ? "checked" : "") />
                <label for="Informal">Informal</label>
            </div>
        </div>
        @if (ViewData.ModelState["OpcionTransformar"]?.Errors.Count > 0)
        {
            foreach (var error in ViewData.ModelState["OpcionTransformar"].Errors)
            {
                <div class="alert alert-danger">@error.ErrorMessage</div>
            }
        }
    <button type="submit" class="button">Transformar</button>
</form>
</div>
@if (!string.IsNullOrEmpty(Model?.TextoTransformado))
{
    <hr />
    <h4>Texto ingresado:</h4>
    <div>@Model.Texto</div>
    <h4>Texto transformado:</h4>
    <div>@Model.TextoTransformado</div>
}

<button type="button" class="back" onclick="location.href='@Url.Action("Index", "Home")'">Ir al Inicio</button>

<link rel="stylesheet" href="~/css/index.css" />
<script src="~/js/validacionTexto.js"></script>